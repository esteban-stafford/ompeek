#!/usr/bin/env perl
use strict;
use warnings;
use File::Basename;
use File::Path qw(make_path);

if (@ARGV != 2) {
    die "Usage: $0 input.html output.cpp\n";
}

my ($infile, $outfile) = @ARGV;

open my $in, '<:encoding(UTF-8)', $infile
  or die "Cannot open $infile: $!";
local $/ = undef;
my $html = <$in>;
close $in;

